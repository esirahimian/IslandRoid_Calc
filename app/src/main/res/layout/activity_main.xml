<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.sarinapp.islandroid_calc.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        android:gravity="center"
        android:padding="20dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/medianGrey"
        android:gravity="center"
        android:padding="20dp"
        android:text="00"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/medianGrey"
        android:gravity="center"
        android:padding="20dp"
        android:text="."
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintRight_toLeftOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/darkOrange"
        android:gravity="center"
        android:padding="20dp"
        android:text="="
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView13"
        style="@style/CalcButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView14"
        style="@style/CalcButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/textView13"
        app:layout_constraintRight_toLeftOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView15"
        style="@style/CalcButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/textView14"
        app:layout_constraintRight_toLeftOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView16"
        style="@style/CalcButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/lightOrange"
        android:text="+"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/textView15"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView17"
        style="@style/CalcButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:background="@color/lightGrey"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView18"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView18"
        style="@style/CalcButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:background="@color/lightGrey"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/textView17"
        app:layout_constraintRight_toLeftOf="@+id/textView19"
        app:layout_constraintBottom_toBottomOf="@+id/textView17"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textView19"
        style="@style/CalcButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:background="@color/lightGrey"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/textView18"
        app:layout_constraintRight_toLeftOf="@+id/textView20"
        app:layout_constraintBottom_toBottomOf="@+id/textView17"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textView20"
        style="@style/CalcButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:background="@color/lightOrange"
        android:textColor="@color/colorWhite"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/textView19"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textView17"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>
